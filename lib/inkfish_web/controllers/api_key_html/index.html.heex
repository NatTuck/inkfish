<.header>
  Listing API Keys
  <:actions>
    <.link href={~p"/api_keys/new"}>
      <.button>New API Key</.button>
    </.link>
  </:actions>
</.header>

<.table id="api_keys" rows={@api_keys} row_click={&JS.navigate(~p"/api_keys/#{&1}")}>
  <:col :let={api_key} label="Key">{api_key.key}</:col>
  <:action :let={api_key}>
    <div class="sr-only">
      <.link navigate={~p"/api_keys/#{api_key}"}>Show</.link>
    </div>
    <.link navigate={~p"/api_keys/#{api_key}/edit"}>Edit</.link>
  </:action>
  <:action :let={api_key}>
    <.link href={~p"/api_keys/#{api_key}"} method="delete" data-confirm="Are you sure?">
      Delete
    </.link>
  </:action>
</.table>
