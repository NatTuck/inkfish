<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="mb-3">
    <%= label f, :name, class: "form-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="mb-3">
    <%= label f, :kind, class: "form-label" %>
    <%= select f, :kind, Inkfish.Grades.GradeColumn.grade_column_types(), class: "form-control" %>
    <%= error_tag f, :kind %>
  </div>

  <div class="mb-3">
    <%= label f, :points, class: "form-label" %>
    <%= number_input f, :points, step: "any", class: "form-control" %>
    <%= error_tag f, :points %>
  </div>

  <div class="mb-3">
    <%= label f, :base, class: "form-label" %>
    <%= number_input f, :base, step: "any", class: "form-control" %>
    <%= error_tag f, :base %>
  </div>

  <div class="mb-3">
    <%= label f, :params, class: "form-label" %>
    <%= text_input f, :params, class: "form-control" %>
    <%= error_tag f, :params %>
  </div>
  
  <div class="mb-3">
    <%= label f, :limits, class: "form-label" %> <br>
    <div id="gcol-limits-root" class="mb-2">
      React component loading...
    </div>

    <div class="mx-4 text-center">
      <%= text_input(f, :limits, id: "gcol-limits", 
            class: "form-control form-control-sm", 
            readonly: true) %>
    </div>
    <%= error_tag f, :limits %>
  </div>

  <div class="mb-3">
    <%= label f, :upload_id, class: "form-label" %>
    <%= text_input f, :upload_id, class: "form-control", readonly: "readonly" %>
    <%= error_tag f, :upload_id %>
    <%= ajax_upload_field "grade_column", "", "grade_column_upload_id" %>
  </div>

  <div class="mb-3">
    <%= submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
