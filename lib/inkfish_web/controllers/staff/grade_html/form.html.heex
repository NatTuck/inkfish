<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="mb-3">
    <%= label f, :score, class: "form-label" %>
    <%= number_input f, :score, step: "any" %>
    <%= error_tag f, :score %>
  </div>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
