<h1>Grading Tasks</h1>

<%= for bucket <- @course.buckets do %>
  <h2><%= bucket.name %></h2>
  <ul>
    <%= for asg <- bucket.assignments do %>
      <li>
        <% path = ~p"/staff/assignments/#{asg}/grading_task" %>
        <.link href={path}><%= asg.name %></.link>
        <%= if @tasks[asg.id] > 0 do %>
          <span class="badge bg-warning">
            <%= @tasks[asg.id] %>
          </span>
        <% end %>
      </li>
    <% end %>
  </ul>
<% end %>
